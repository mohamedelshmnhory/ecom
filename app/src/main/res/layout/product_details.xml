<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="0dp"
        android:layout_height="300dp"
        tools:ignore="MissingConstraints"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="product details"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:textSize="24sp"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo" />

    <Button
        android:id="@+id/availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C8B7B7"
        android:backgroundTint="#BDB7B7"
        android:shadowColor="#C6C2C2"
        android:layout_marginLeft="16dp"
        android:text="See if it's available"
        android:textColorHighlight="#D1CCCC"
        android:textColorLink="#D8D6D6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:rippleColor="#BDBABA"
        app:strokeColor="#BCB7B7" />

</androidx.constraintlayout.widget.ConstraintLayout>